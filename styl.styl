@import 'https://fonts.googleapis.com/css?family=Roboto+Slab|Ubuntu';
*
  margin 0
  padding 0
  box-sizing border-box
.clear
  clear both

body
  padding .75em
  background-color #9aaed5
  font-family 'ubuntu', 'Roboto Slab', serif
  // small
  @media screen and (max-width: 360px)
    padding: .5em
    transition: all .2s ease
  // large
  @media screen and (min-width: 600px)
    padding 2em 1em
    transition: all .2s ease
article
  background-color #fef7ec
  margin 0 auto
  box-shadow 9px 7px 10px 0 rgba(0,0,0,0.16), -14px 22px 14px 0 rgba(0,0,0,0.12)
  max-width 600px
  h1
    padding: 1em 1em .5em 1em;
    font-size: 2em;
    font-weight: 400;
    text-align: center;
    width: 100%;
    color: #57688a;
    line-height: 1.618;
  .content p
    color: #4b4b4b;
    line-height: 1.618;
    padding .75em 1em
    text-indent 1.5em
    @media screen and (min-width: 600px)
      padding 1em 2em
  .portrait img
    border-radius: 50%;
    border: .3em solid rgba(174, 144, 97, 0.4)
    padding .25em
  .portrait
    float right
    padding .5em
    // bigger than 600
    @media screen and (max-width: 600px)
      float unset
      text-align: center
      transition: all .2s ease
  .footer
    background-color: #C3C3C3;
    padding: .5em 0 0 0;
    margin: 1em 0;
  .subtitle
    color: #cbc7c7;
    background-color: #8f80b9;
    text-align: center;
    padding: 1em;
    span a
      margin-left: 1em
  .more-info
    padding: 0 0 0 1em;
    color: grey;
a
  color: inherit;
  border-bottom: .2em solid #a0c2db;
  text-decoration: none;
  font-style: italic;
  &:hover
  &:active
  &:focus
    border-color lighten(#a0c2db, 10)
    transition color .3s ease


article
  position relative
.source
  position: absolute;
  top: 1px;
  transform: rotate(-6deg);
  background-color: white;
  left: -7px;
  padding: .5em;
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
